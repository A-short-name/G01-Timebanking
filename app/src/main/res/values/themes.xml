<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.G01Timebanking" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/surfaceColor</item>
        <item name="iconColor">@color/primaryColor</item>
        <item name="iconAppBarColor">@color/primaryTextColor</item>
        <item name="iconOnCardColor">@color/secondaryTextColor</item>
        <item name="selectedTabColor">@color/selectedTabColor</item>
        <item name="unselectedTabText">@color/unselectedTabText</item>
        <item name="senderMessageColor">@color/senderMessageColor</item>
        <item name="senderMessageIconColor">@color/senderMessageIcon</item>

    </style>

    <style name="Theme.G01Timebanking.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.G01Timebanking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.G01Timebanking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>